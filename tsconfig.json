{
  "compilerOptions": {
    "lib": [
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es6"
  },
  "include": [
    "./**/*",
    "./.gulp/**/*"
  ],
  "exclude": [
    "node_modules",
    "out"
  ]
}
